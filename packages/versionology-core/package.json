{
  "name": "versionology-core",
  "version": "0.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^7.0.0",
    "documentation": "4.0.0-rc.1",
    "flow-bin": "^0.50.0",
    "jest": "^20.0.4",
    "jest-cli": "^20.0.0",
    "npm-watch": "^0.2.0",
    "opn-cli": "^3.1.0",
    "rimraf": "^2.6.1",
    "ts-jest": "^20.0.10",
    "tslint": "^5.0.0",
    "tslint-config-prettier": "^1.1.0",
    "typescript": "^2.0.0"
  },
  "scripts": {
    "test": "tsc -p tsconfig.test.json --pretty && jest",
    "coverage": "npm test -- --coverage",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "flow": "flow check",
    "docs": "documentation readme src --section=API",
    "clean": "rimraf dist",
    "prebuild": "npm run docs && npm run clean",
    "build": "tsc --pretty",
    "watch": "npm-watch",
    "prepublish": "npm run lint && npm test && npm run build",
    "postpublish": "git push origin master --follow-tags"
  },
  "engines": {
    "node": ">=6"
  },
  "watch": {
    "test": "{src,test}/*.js",
    "lint": "{src,test}/*.js",
    "build": "src"
  },
  "jest": {
    "testRegex": "/test/.*",
    "testEnvironment": "node",
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
